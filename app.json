{
  "expo": {
    "name": "GolfBuddy",
    "slug": "golfbuddy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/Logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/Logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#111827"
    },
    "ios": {
      "bundleIdentifier": "com.ayonghosh.golfbuddy"
    },
    "android": {
      "package": "com.ayonghosh.golfbuddy",
      "adaptiveIcon": {
        "foregroundImage": "./assets/Logo.png",
        "backgroundColor": "#111827"
      },
      "edgeToEdge": true
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#232323",
          "image": "./assets/Logo.png",
          "dark": {
            "image": "./assets/Logo.png",
            "backgroundColor": "#111827"
          },
          "imageWidth": 200
        }
      ],
      [
        "expo-system-ui",
        {
          "android": {
            "edgeToEdge": true,
            "statusBarStyle": "dark",
            "statusBarBackgroundColor": "#111827",
            "navigationBarBackgroundColor": "#111827"
          }
        }
      ],
      "expo-router"
    ],
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
